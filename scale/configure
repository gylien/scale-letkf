TOPDIR    = ../../..
SCALE_INC = -I$(TOPDIR)/include
SCALE_LIB = -L$(TOPDIR)/lib -lscale
SCALE_RM_OBJDIR = $(TOPDIR)/scale-rm/src/.libs

include $(TOPDIR)/sysdep/Makedef.$(SCALE_SYS)
include $(TOPDIR)/Mkinclude

#------

include ../configure.user

#------

ifeq ($(SCALE_USER_VER),T)
FOPTS     += -DSCALEUV
FOPTS_SCALE += -DSCALEUV
endif

ifeq ($(LETKF_SINGLE_FP),T)
FOPTS     += -DSINGLELETKF
FOPTS_SCALE += -DSINGLELETKF
endif

ifeq ($(H08),T)
FOPTS     += -DH08
FOPTS_SCALE += -DH08
endif

ifeq ($(ENABLE_JITDT),T)
FOPTS     += -DJITDT
FOPTS_SCALE += -DJITDT
endif

ifeq ($(ENABLE_PLOT_DCL),T)
LIBDCL = -L/work/hp150019/c24140/Lib/dcl/lib -lf77dcl734 -lgtk-x11-2.0 -lgdk-x11-2.0 -latk-1.0 -lgio-2.0 -lpangoft2-1.0 -lpangocairo-1.0 -lgdk_pixbuf-2.0 -lcairo -lpango-1.0 -lfontconfig -lgobject-2.0 -lglib-2.0 -lfreetype  
FOPTS += -DPLOT_DCL $(LIBDCL)
FOPTS_SCALE += -DPLOT_DCL $(LIBDCL)
endif